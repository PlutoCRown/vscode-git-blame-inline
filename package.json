{
    "name": "git-blame-lite",
    "displayName": "%displayName%",
    "description": "%description%",
    "version": "1.0.0",
    "publisher": "PlutoCRown",
    "author": "PlutoCRown",
    "license": "MIT",
    "icon": "icon.png",
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "SCM Providers",
        "Other"
    ],
    "keywords": [
        "git",
        "blame",
        "inline",
        "annotation",
        "history",
        "scm",
        "github",
        "gitlab",
        "commit",
        "author",
        "vcs"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/PlutoCRown/vscode-git-blame-inline"
    },
    "homepage": "https://github.com/PlutoCRown/vscode-git-blame-inline#readme",
    "bugs": {
        "url": "https://github.com/PlutoCRown/vscode-git-blame-inline/issues"
    },
    "galleryBanner": {
        "color": "#0066CC",
        "theme": "dark"
    },
    "extensionDependencies": [
        "vscode.git"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "git-blame-lite.toggle",
                "title": "%command.toggle%"
            },
            {
                "command": "git-blame-lite.showCommitDiff",
                "title": "%command.showCommitDiff%"
            },
            {
                "command": "git-blame-lite.stashChanges",
                "title": "%command.stashChanges%",
                "icon": "$(archive)"
            }
        ],
        "menus": {
            "scm/resourceGroup/context": [
                {
                    "command": "git-blame-lite.stashChanges",
                    "when": "scmProvider == git && config.gitBlameInline.showStashButton",
                    "group": "inline"
                }
            ]
        },
        "configuration": {
            "title": "%config.title%",
            "properties": {
                "gitBlameInline.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "%config.enabled%"
                },
                "gitBlameInline.format": {
                    "type": "string",
                    "default": "{author}, {time} â€¢ {message}",
                    "description": "%config.format%"
                },
                "gitBlameInline.messageLength": {
                    "type": "number",
                    "default": 50,
                    "description": "%config.messageLength%"
                },
                "gitBlameInline.showStashButton": {
                    "type": "boolean",
                    "default": true,
                    "description": "%config.showStashButton%"
                }
            }
        }
    },
    "scripts": {
        "dev": "bun build src/extension.ts --outdir dist --watch --external vscode --target=node --format=cjs --sourcemap=external",
        "build": "bun build src/extension.ts --outdir dist --minify --external vscode --target=node --format=cjs",
        "package": "bun run build && vsce package",
        "vscode:prepublish": "bun run build"
    },
    "devDependencies": {
        "@types/node": "^20.0.0",
        "@types/vscode": "^1.80.0",
        "@vscode/vsce": "^3.7.1",
        "typescript": "^5.3.0"
    },
    "dependencies": {}
}